<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:transitionGroup="true"
    tools:context=".login.PasswordResetFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutPasswordReset"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarPasswordReset"
            style="@style/Theme.Reading_cycle.ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.Reading_cycle.ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_password_reset"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_28">

            <TextView
                android:id="@+id/toolbarTextPasswordReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="@font/soyo_maple_bold"
                android:gravity="center"
                android:text="비밀번호 재설정"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#27713C"
                android:textSize="16dp" />


        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/toolbarDividerPasswordReset"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#27713C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutPasswordReset" />

    <EditText
        android:id="@+id/edtEmailReset"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border_dark_brown"
        android:drawableLeft="@drawable/baseline_mail_outline_30"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="이메일"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutPasswordReset" />

    <Button
        android:id="@+id/btnSendReset"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"

        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_stroke"
        android:backgroundTint="@color/theme_green"
        android:elevation="0dp"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="비밀번호 재설정 이메일 발송"
        android:textColor="@color/background"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>