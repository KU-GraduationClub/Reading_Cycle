<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/border_post_main">

    <Button
        android:id="@+id/btnRowPostSwapCate1"
        android:layout_width="80dp"
        android:layout_height="43dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="#9E6320"
        android:clickable="false"
        android:fontFamily="@font/soyo_maple_regular"
        android:padding="1dp"
        android:text="도서 종류"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRowPostSwapType"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/baseline_sync_40_blue"
        app:layout_constraintEnd_toStartOf="@+id/btnRowPostSwapType2"
        app:layout_constraintStart_toEndOf="@id/btnRowPostSwapCate1"
        app:layout_constraintTop_toTopOf="@+id/btnRowPostSwapCate1" />

    <Button
        android:id="@+id/btnRowPostSwapType2"
        android:layout_width="80dp"
        android:layout_height="43dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#5A69EF"
        android:clickable="false"
        android:fontFamily="@font/soyo_maple_regular"
        android:padding="1dp"
        android:text="도서 종류"
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="#FFFFFF" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_marginBottom="5dp"
        android:background="#9A9393"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/textRowPostSwapTitle"
        app:layout_constraintEnd_toEndOf="@+id/BorderRowPostSale1"
        app:layout_constraintStart_toStartOf="parent">

        <!-- ImageView 2 -->

        <ImageView
            android:id="@+id/imgRowPostSwapPoster"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/baseline_image_24" />
    </FrameLayout>

    <TextView
        android:id="@+id/textRowPostSwapTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/soyo_maple_regular"
        android:gravity="center"
        android:text="책 제목"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/BorderRowPostSale1"
        android:layout_width="200dp"
        android:layout_height="295dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/border_post_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
