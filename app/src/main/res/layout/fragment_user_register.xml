<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.UserRegisterFragment"
    tools:ignore="ExtraText">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarUserRegister"
            style="@style/Theme.Reading_cycle.ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.Reading_cycle.ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_password_reset"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_28">

            <TextView
                android:id="@+id/toolbarLibraryMyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:fontFamily="@font/soyo_maple_bold"
                android:gravity="center"
                android:text="회원가입"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#27713C"
                android:textSize="16dp" />


        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/toolbarDividerResister"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#27713C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout" />

    <ImageView
        android:id="@+id/imgBtnSetProfile"
        android:layout_width="121dp"
        android:layout_height="103dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarLayout"
        app:tint="#9E9AA897" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="49dp"
        android:layout_height="44dp"
        android:layout_marginEnd="140dp"
        android:src="@drawable/round_add_box_60"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnSetProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgBtnSetProfile"
        app:tint="@color/theme_green" />

    <EditText
        android:id="@+id/edtLoginEmail"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_dark_brown"
        android:drawableLeft="@drawable/baseline_mail_outline_30"
        android:drawablePadding="10dp"
        android:ems="20"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="이메일"
        android:inputType="text"
        android:paddingStart="10dp"
        android:paddingRight="5dp"
        android:textColorHint="#6A3F0D"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSendAuthCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnSetProfile" />

    <Button
        android:id="@+id/btnSendAuthCode"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:text="인증 발송"
        android:textColor="@color/background"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtLoginEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtLoginEmail"
        app:layout_constraintTop_toTopOf="@+id/edtLoginEmail" />

    <EditText
        android:id="@+id/edtAuthCode"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border_dark_brown"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="인증 코드 입력"
        android:inputType="text"
        android:paddingStart="15dp"
        android:textColorHint="#6A3F0D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLoginEmail" />

    <EditText
        android:id="@+id/edtLoginPassword"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border_dark_brown"
        android:drawableLeft="@drawable/baseline_lock_open_30"
        android:drawableRight="@drawable/baseline_remove_red_eye_34"
        android:drawablePadding="10dp"
        android:ems="20"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtAuthCode" />

    <EditText
        android:id="@+id/editPasswordCheck"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border_dark_brown"
        android:drawableLeft="@drawable/baseline_lock_open_30"
        android:drawableRight="@drawable/baseline_remove_red_eye_34"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtLoginPassword" />

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border_dark_brown"
        android:drawableLeft="@drawable/baseline_person_30"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="유저 닉네임"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPasswordCheck" />

    <Button
        android:id="@+id/btnRegisterFin"
        android:layout_width="330dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"

        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_stroke"
        android:backgroundTint="@color/theme_green"
        android:elevation="0dp"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="가입완료"
        android:textColor="@color/background"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>