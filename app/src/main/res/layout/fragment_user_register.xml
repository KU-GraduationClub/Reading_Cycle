<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.UserRegisterFragment"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/registerFinBtn"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"

        android:background="@drawable/shape_stroke"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="가입완료"
        android:textColor="@color/background"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typeUserName" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarUserRegister"
            style="@style/Theme.Reading_cycle.ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.Reading_cycle.ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_password_reset"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_28">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/soyo_maple_bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#27713C"
                android:textSize="20dp" />


        </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#27713C" />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/typeEMAIL"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="이메일"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/sendCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setProfileBtn" />

    <EditText
        android:id="@+id/typePW"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="비밀번호"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authCode" />

    <EditText
        android:id="@+id/authCode"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="인증코드"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendCode" />

    <EditText
        android:id="@+id/typePW2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="비밀번호 확인"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typePW" />

    <ImageView
        android:id="@+id/visibleEMAIL"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/baseline_visibility_40"
        app:layout_constraintBottom_toBottomOf="@id/typePW"
        app:layout_constraintEnd_toEndOf="@id/typePW"
        app:layout_constraintStart_toStartOf="@id/typePW"
        app:layout_constraintTop_toTopOf="@id/typePW"
        app:tint="#6A3F0D" />

    <ImageView
        android:id="@+id/visiblePW2"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/baseline_visibility_40"
        app:layout_constraintBottom_toBottomOf="@id/typePW2"
        app:layout_constraintEnd_toEndOf="@id/typePW2"
        app:layout_constraintStart_toStartOf="@id/typePW2"
        app:layout_constraintTop_toTopOf="@id/typePW2"
        app:tint="#6A3F0D" />

    <EditText
        android:id="@+id/typeUserName"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:hint="유저 닉네임"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typePW2" />

    <Button
        android:id="@+id/sendCode"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="160dp"

        android:layout_marginEnd="100dp"
        android:background="@drawable/shape_stroke"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="인증코드 전송"
        android:textColor="@color/background"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/typeEMAIL"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <Button
        android:id="@+id/setProfileBtn"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="140dp"
        android:backgroundTint="@color/theme_brown"
        android:fontFamily="@font/soyo_maple_regular"
        android:text="프로필 이미지 설정"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>