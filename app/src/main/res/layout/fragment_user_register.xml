<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".login.UserRegisterFragment"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/register"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="111dp"
        android:layout_marginBottom="83dp"

        android:background="@drawable/shape_stroke"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="가입완료"
        android:textColor="@color/background"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_nickname" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutUserRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarLayoutUserRegister"
            style="@style/Theme.Reading_cycle.ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/background"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.Reading_cycle.ToolbarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/toolbar_password_reset">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/soyo_maple_bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#27713C"
                android:textSize="20dp" />


        </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#27713C" />

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/type_email"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:inputType="text"
        android:paddingStart="10dp"
        android:hint="이메일"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/send_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutUserRegister" />

    <EditText
        android:id="@+id/type_password"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:inputType="text"
        android:paddingStart="10dp"
        android:hint="비밀번호"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/auth_code" />

    <EditText
        android:id="@+id/auth_code"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:inputType="text"
        android:paddingStart="10dp"
        android:hint="인증코드"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_code" />

    <EditText
        android:id="@+id/type_password2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:inputType="text"
        android:paddingStart="10dp"
        android:hint="비밀번호 확인"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_password" />

    <ImageView
        android:id="@+id/view_email"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/baseline_visibility_40"
        app:layout_constraintBottom_toBottomOf="@id/type_password"
        app:layout_constraintEnd_toEndOf="@id/type_password"
        app:layout_constraintStart_toStartOf="@id/type_password"
        app:layout_constraintTop_toTopOf="@id/type_password"
        app:tint="#6A3F0D" />

    <ImageView
        android:id="@+id/view_password2"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/baseline_visibility_40"
        app:layout_constraintBottom_toBottomOf="@id/type_password2"
        app:layout_constraintEnd_toEndOf="@id/type_password2"
        app:layout_constraintStart_toStartOf="@id/type_password2"
        app:layout_constraintTop_toTopOf="@id/type_password2"
        app:tint="#6A3F0D" />

    <EditText
        android:id="@+id/type_nickname"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/border"
        android:ems="10"
        android:fontFamily="@font/soyo_maple_regular"
        android:inputType="text"
        android:paddingStart="10dp"
        android:hint="유저 닉네임"
        android:textColorHint="#6A3F0D"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_password2" />

    <Button
        android:id="@+id/send_code"
        android:layout_width="86dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="59dp"

        android:layout_marginEnd="100dp"
        android:background="@drawable/shape_stroke"
        android:backgroundTint="@color/theme_green"
        android:fontFamily="@font/soyo_maple_regular"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:text="인증코드 전송"
        android:textColor="@color/background"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/type_email"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutUserRegister" />

</androidx.constraintlayout.widget.ConstraintLayout>