<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LibraryMainFragment"
    android:transitionGroup="true">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutPostMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarLayoutPostMain"
            style="@style/Theme.Reading_cycle.ToolbarTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Theme.Reading_cycle.ToolbarTheme"
            app:menu="@menu/toolbar_library_main"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_28">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#27713C" />

        </com.google.android.material.appbar.MaterialToolbar>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#27713C" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="84dp"
        android:layout_height="81dp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutPostMain" />

    <!-- 닉네임1-->
     <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image"
        android:text="호두"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!--닉네임2-->
    <TextView
        android:id="@+id/library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        android:text="님의 라이브러리"
        android:textSize="20dp"/>


    <!-- 게시물 카운트 -->
    <TextView
        android:id="@+id/post_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="게시물: 4"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/library"
        app:layout_constraintTop_toTopOf="@+id/library"
        app:layout_constraintBottom_toBottomOf="@+id/library"
        android:textStyle="bold"/>

    <!-- 프렌드 카운트 -->
    <TextView
        android:id="@+id/friend_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="프렌드: 10"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@+id/post_count"
        app:layout_constraintTop_toBottomOf="@+id/post_count"
        android:textStyle="bold"/>

    <!-- 위치 아이콘 -->
    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        android:src="@drawable/baseline_location_on_40" />
    <!--위치정보-->
    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/location_icon"
        app:layout_constraintTop_toTopOf="@+id/location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/location_icon"
        android:text="경상남도 창원시 의창구 중동"
        android:textSize="15dp"/>

    <!--친구추가버튼-->
    <Button
        android:id="@+id/add_friend_button"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="252dp"
        android:background="#964b00"
        android:text="친구 추가"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/position" />

    <!--채팅버튼-->
    <Button
        android:id="@+id/add_chat_button"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:background="#964b00"
        android:text=" 채팅 "
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_friend_button"
        app:layout_constraintTop_toTopOf="@+id/add_friend_button" />

    <!--구분선-->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#808080"
        app:layout_constraintTop_toBottomOf="@+id/add_friend_button"
        tools:layout_editor_absoluteX="0dp" />

    <!--도서 종류 -->
    <Button
        android:id="@+id/add_book1_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="#964b00"
        android:text="역사"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <!--교환-->
    <ImageView
        android:id="@+id/add_cached"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_cached_24"
        app:layout_constraintStart_toEndOf="@+id/add_book1_button"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />


    <Button
        android:id="@+id/add_book2_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="#5A69EF"
        android:text="에세이"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_cached"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="117dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/book"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_book1_button" />

    <Button
        android:id="@+id/add_book3_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="#964b00"
        android:ellipsize="end"
        android:maxLines="10"
        android:text="역사/인문/철학"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_book2_button"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <ImageView
        android:id="@+id/add_money"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_attach_money_24"
        app:layout_constraintStart_toEndOf="@+id/add_book3_button"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <Button
        android:id="@+id/add_book4_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="#E91E63"
        android:text="4000"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_money"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <ImageView
        android:id="@+id/book2_image"
        android:layout_width="117dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/book2"
        app:layout_constraintStart_toStartOf="@+id/add_book3_button"
        app:layout_constraintTop_toBottomOf="@+id/add_book3_button" />

    <Button
        android:id="@+id/add_book5_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="#964b00"
        android:ellipsize="end"
        android:maxLines="10"
        android:text="소설"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_book4_button"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <ImageView
        android:id="@+id/add_money2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_attach_money_24"
        app:layout_constraintStart_toEndOf="@+id/add_book5_button"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <Button
        android:id="@+id/add_book6_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="#E91E63"
        android:text="5000"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_money2"
        app:layout_constraintTop_toTopOf="@+id/add_book1_button" />

    <ImageView
        android:id="@+id/book3_image"
        android:layout_width="117dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/book3"
        app:layout_constraintStart_toStartOf="@+id/add_book5_button"
        app:layout_constraintTop_toBottomOf="@+id/add_book1_button" />

    <TextView
        android:id="@+id/bookname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="마흔에 읽는 쇼펜하우어"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/add_book1_button"
        app:layout_constraintStart_toStartOf="@+id/book_image"
        tools:layout_editor_absoluteX="4dp" />


    <TextView
        android:id="@+id/bookname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="남에게 보여주려고 인생을"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/add_book3_button"
        app:layout_constraintStart_toStartOf="@+id/book2_image"
        tools:layout_editor_absoluteX="145dp"/>


    <TextView
        android:id="@+id/bookname3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/bookname2"
        app:layout_constraintTop_toBottomOf="@+id/bookname2"
        android:text="낭비하지 마라"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/bookname4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="128dp"
        android:gravity="center"
        android:text="데미안"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/book3_image"
        app:layout_constraintTop_toBottomOf="@+id/add_money2" />

    <Button
        android:id="@+id/add_book7_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:background="#964b00"
        android:text="소설"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/bookname"
        app:layout_constraintTop_toBottomOf="@+id/bookname" />

    <ImageView
        android:id="@+id/add_cached2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_cached_24"
        app:layout_constraintStart_toEndOf="@+id/add_book7_button"
        app:layout_constraintTop_toTopOf="@+id/add_book7_button" />

    <Button
        android:id="@+id/add_book8_button"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="#5A69EF"
        android:text="만화"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/add_cached2"
        app:layout_constraintTop_toTopOf="@+id/add_book7_button" />

    <ImageView
        android:id="@+id/book4_image"
        android:layout_width="117dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/book4"
        app:layout_constraintStart_toStartOf="@+id/add_book7_button"
        app:layout_constraintTop_toBottomOf="@+id/add_book7_button" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="556dp"
        android:src="@drawable/plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayoutPostMain" />



</androidx.constraintlayout.widget.ConstraintLayout>
