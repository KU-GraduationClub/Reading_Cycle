<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="270dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/border_post_main">

    <Button
        android:id="@+id/btnRowLibraryItemSwap1"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#9E6320"
        android:clickable="false"
        android:fontFamily="@font/soyo_maple_regular"
        android:padding="1dp"
        android:text="도서 종류"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgRowLibraryItemSwap"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="2dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toStartOf="@+id/btnRowLibraryItemSwap2"
        app:layout_constraintStart_toEndOf="@+id/btnRowLibraryItemSwap1"
        app:layout_constraintTop_toTopOf="@+id/btnRowLibraryItemSwap1"
        app:srcCompat="@drawable/baseline_sync_40_blue" />

    <Button
        android:id="@+id/btnRowLibraryItemSwap2"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#5A69EF"
        android:clickable="false"
        android:fontFamily="@font/soyo_maple_regular"
        android:padding="1dp"
        android:text="도서 종류"
        android:textColor="#FFFFFF"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRowLibraryItemSwap1" />

    <FrameLayout
        android:id="@+id/frameLayoutRowLibraryItemSwap2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#9A9393"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRowLibraryItemSwap1">

        <!-- ImageView 2 -->

        <ImageView
            android:id="@+id/imgRowLibraryItemSwap2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            app:srcCompat="@drawable/baseline_image_24" />

    </FrameLayout>

    <TextView
        android:id="@+id/textRowLibraryItemSwap1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/soyo_maple_bold"
        android:gravity="center"
        android:text="작가"
        android:textColor="#000000"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/BorderRowLibraryItemSwap"
        app:layout_constraintStart_toEndOf="@+id/frameLayoutRowLibraryItemSwap2"
        app:layout_constraintTop_toTopOf="@+id/frameLayoutRowLibraryItemSwap2" />

    <TextView
        android:id="@+id/textRowLibraryItemSwapAuthor"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/border_post_main"
        android:fontFamily="@font/soyo_maple_regular"
        android:gravity="center"
        android:text="작가명"
        android:textColor="#000000"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@+id/BorderRowLibraryItemSwap"
        app:layout_constraintStart_toEndOf="@+id/frameLayoutRowLibraryItemSwap2"
        app:layout_constraintTop_toBottomOf="@+id/textRowLibraryItemSwap1" />

    <TextView
        android:id="@+id/textRowLibraryItemSwap2"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/soyo_maple_bold"
        android:gravity="center"
        android:text="책 상태"
        android:textColor="#000000"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/BorderRowLibraryItemSwap"
        app:layout_constraintStart_toEndOf="@+id/frameLayoutRowLibraryItemSwap2"
        app:layout_constraintTop_toBottomOf="@+id/textRowLibraryItemSwapAuthor" />

    <TextView
        android:id="@+id/textRowLibraryItemSwapState"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/border_post_main"
        android:fontFamily="@font/soyo_maple_regular"
        android:gravity="center"
        android:text="책 상태"
        android:textColor="#000000"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@+id/BorderRowLibraryItemSwap"
        app:layout_constraintStart_toEndOf="@+id/frameLayoutRowLibraryItemSwap2"
        app:layout_constraintTop_toBottomOf="@+id/textRowLibraryItemSwap2" />

    <TextView
        android:id="@+id/textRowLibraryItemSwapTitle"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_post_main"
        android:fontFamily="@font/soyo_maple_regular"
        android:gravity="center"
        android:text="책 제목"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayoutRowLibraryItemSwap2" />

    <View
        android:id="@+id/BorderRowLibraryItemSwap"
        android:layout_width="200dp"
        android:layout_height="295dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/border_post_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
